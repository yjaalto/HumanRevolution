<!DOCTYPE html>
<html lang="ko">

<head>
    <% include ./head %>
    <title><%=title%></title>
</head>

<body>
    <header>
        <% var penName = penName %>
        <% var avatar = avatar; %>
        <% include ./header %>
    </header>
    <main role="main" class="content">
        <div class="container mt-5">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-inline">
                        <% if (topic[0].authname === username) { %>
                        <a href='/chapter/create/<%=topic[0].id%>' class="btn btn-primary mb-2 mr-2 text-white">새로
                            작성하기</a>
                        <% } %>
                        <a href='/' class="btn btn-secondary mb-2">목록</a>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="card card-stats mb-4">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-auto">
                                    <div class="avatar rounded-cicle bg-white mr-3 shadow">
                                        <% if(topic[0].author_img == '' || topic[0].author_img == null) { %>
                                        <img src="/images/profile_none.png">
                                        <%} else { %>
                                        <img src="/uploads/<%= topic[0].author_img%>">
                                        <% } %>
                                    </div>
                                    <div class="author">
                                        <%= topic[0].name%>
                                    </div>
                                </div>
                                <div class="col">
                                    <h4 class="title font-weight-bold"><%=topic[0].title%></h4>
                                    <p class="text-muted">
                                        <% var desc = topic[0].description %>
                                        <%- desc.replace('\n', '<br>') %>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% if(chapters != null && chapters.length > 0) {%>
            <hr>
            <div class="row">
                <% var i = 0; %>
                <% while(i < chapters.length) { %>
                <div class="col-xl-4 col-md-6">
                    <div class="card">
                        <% if (chapters[i].img_tag != '') { %>
                            <img class="card-img-top" src="<%= chapters[i].img_tag%>" alt="chapter image">
                        <%} %>
                        <div class="card-body">
                            <h5 class="h2 card-title"><%=chapters[i].title%></h5>
                            <span class="badge badge-danger">
                                    <i class="fas fa-heart"></i> <%= chapters[i].likes %>
                            </span>
                            <span class="badge badge-info">
                                    <i class="fas fa-eye"></i> <%= chapters[i].views %>
                            </span>
                            <span class="badge badge-success">
                                    <i class="far fa-clock"></i> <%= chapters[i].created %>
                            </span>
                            <p class="card-text mt-4">
                                <%= chapters[i].text %>
                            </p>
                            <a href='/chapter/view/<%=topic[0].id%>/<%=chapters[i].id%>' class="btn btn-primary">더
                                읽기</a>

                        </div>
                    </div>
                </div>
                <% i++;}%>
                <%}%>
        </div>
    </div>
    </main>
    <a href="#" id="scroll" style="display: none;"><span></span></a>
    <div class="modal fade userModal" tabindex="-1" role="dialog" aria-labelledby="userModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-sm">
              <div class="modal-content">
                ...
              </div>
            </div>
          </div>
</body>
</html>