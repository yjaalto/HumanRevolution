<!DOCTYPE html>
<html lang="ko">

<head>
    <% include ./head %>
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    <title><%=title%></title>
</head>

<body>
    <header>
        <% var penName = penName %>
        <% var avatar = avatar; %>
        <% include ./header %>
    </header>
    <main role="main" class="content">
        <div class="container mt-5">
            <div class="row">
                <h2><%= title%></h2>
                <div class="col-md-12 topic">
                    <form action="/chapter/create_process" method="post" class="" id="form" novalidate>
                        <input type="hidden" name="topic_id" value='<%= topicId %>'>
                        <% if (locals.chapterId) { %>
                        <input type="hidden" name="chapter_id" value='<%= chapterId %>'>
                        <%}%>
                        
                        <label for="title" class="mt-3">제목</label>
                        <input type="text" class="form-control" id="title" name="title" required>
                        <div class="invalid-feedback">
                            제목을 입력해주세요.
                        </div>
                        <label for="content" class="mt-3">내용</label>
                        <div id="editor"></div>
                        <textarea name="content" class="sr-only" id="hiddenContent"></textarea>
                        <textarea name="text" class="sr-only" id="hiddenText"></textarea>
                        <div class="text-right">
                            <button class="btn btn-primary btn-md mt-3 mb-3" type="submit">저장</button>
                            <a href='/topic/<%= topicId %>' class="btn btn-secondary text-white">목록</a>
                </div>
                </form>
            </div>
        </div>
        </div>
    </main>

</body>
<script>
    var quill;
    $(document).ready(function () {
        const editor = $('#editor');
        var Block = Quill.import('blots/block');
        Block.tagName = 'div';
        Quill.register(Block);
        quill = new Quill('#editor', {
            modules: {
                toolbar: [
                    ['bold', 'italic', 'underline', 'strike'],
                    ['blockquote'],
                    [{
                        'header': 1
                    }, {
                        'header': 2
                    }],
                    [{
                        'list': 'ordered'
                    }, {
                        'list': 'bullet'
                    }],
                    ['image']
                ]
            },
            theme: 'snow'
        });

        const state = '<%= state %>';
        let action;
        if (state === 'U') {
            let chapterId = '<%= chapterId %>';
            $('#title').val('<%= chapter_title %>');
            quill.setContents( <%-JSON.stringify(delta) %> );
            action = '/chapter/update_process';
        } else {
            action = '/chapter/create_process';
        }

        $("#form").attr('action', action);

        $("#form").on("submit", function () {
            var editor = document.querySelector("#editor");
            $("#hiddenContent").val(editor.children[0].innerHTML);
            $("#hiddenText").val(quill.getText());
        });

        quill.getModule('toolbar').addHandler('image', () => {
            selectLocalImage();
        })
    });

    function selectLocalImage() {
        const input = document.createElement('input');
        input.setAttribute('type', 'file');
        //   input.setAttribute('name', 'file');
        input.click();

        // Listen upload local image and save to server
        input.onchange = () => {
            const file = input.files[0];

            // file type is only image.
            if (/^image\//.test(file.type)) {
                saveToServer(file);
            } else {
                alert('이미지만 업로드 가능합니다.');
            }
        };
    }

    function saveToServer(file) {
        const fd = new FormData();
        fd.append('image', file);
        fd.append('topic', '<%topicId%>');

        fetch('/upload/image', {
            method: 'POST',
            body: fd
        }).then((res) => {
            if (res.status === 200 || res.status === 201) {
                res.text().then(url =>insertToEditor(url));
            } else { // 실패를 알리는 HTTP 상태 코드면
                console.error(res.statusText);
            }
        }).catch(err => console.log(err));
    }

    function insertToEditor(url) {
        // push image url to rich editor.
        const range = quill.getSelection();
        quill.insertEmbed(range.index, 'image', url);
    }
</script>

</html>